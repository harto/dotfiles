#!/usr/bin/env bash

# Search dangling commits using `git log` filters:
#
#   git-grep-dangling-commits -S'something in the diff'
#   git-grep-dangling-commits --grep='something in the log message'

filteropts="$@"

git fsck --lost-found \
  | awk '/commit/ { print $3 }' \
  | xargs -n1 -I% git log %~1..% --oneline "$filteropts"
