[core]
    excludesfile = ~/.gitignore-global
[user]
    name = Stuart Campbell
    email = stuart@harto.org
[color]
    ui = auto
[alias]
    b = branch
    ci = commit -v
    co = checkout
    ff = merge --ff-only
    st = status
    graph = log --pretty=graphable --graph --date=short
    remote-head = !sh -c 'sed -n \"s@ref: refs/remotes/@@p\" .git/refs/remotes/$1/HEAD' -
    summary = !git log --oneline $(git remote-head origin)..
    preview = diff --cached
    instamend = commit --amend --no-edit
    # maybe = !bash -c 'b=${1:-$(git symbolic-ref --short HEAD)} && git branch -m $b maybe/$b' -
    wip = !git add -A && git commit -nm wip
    unwip = reset HEAD^
[merge]
    defaultToUpstream = true
[pretty]
    graphable = %C(yellow)%h%C(red)%d %C(reset)%s %C(green)%an %C(bold black)%cr
[push]
    # only push current branch
    default = upstream
[remote "origin"]
    prune = true
[grep]
    extendedRegexp = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
[rerere]
    enabled = true
