[user]
    name = Stuart Campbell
    email = stuart@harto.org
[color]
    ui = auto
[alias]
    b = branch
    ci = commit -v
    co = checkout
    ff = merge --ff-only
    st = status
    graph = log --pretty=graphable --graph --date=short
    # XXX: should compare against branch point
    summary = log --oneline origin/master..
    preview = diff --cached
[merge]
    defaultToUpstream = true
[pretty]
    graphable = %C(yellow)%h%C(red)%d %C(reset)%s %C(green)%an %C(bold black)%cr
[push]
    # only push current branch
    default = upstream
[core]
    excludesfile = /Users/stuart/.gitignore-global
[remote "origin"]
	prune = true
