# Autocomplete ssh aliases
__complete_ssh_hosts() {
  COMPREPLY=()
  local cur="${COMP_WORDS[COMP_CWORD]}"
  local ssh_hosts
  ssh_hosts=$(grep '^Host ' ~/.ssh/config | \
                awk '{print $2}' | \
                grep -v '*')
  COMPREPLY=($(compgen -W "${ssh_hosts}" -- $cur))
  return 0
}
complete -F __complete_ssh_hosts ssh
